@model Northwind.Web.MVC.Models.Categories.CategoryEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Headers{
    @await Component.InvokeAsync("BreadcrumbsNavigation");
}
<h1>Edit</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-lg-4">
        <div class="row">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <input type="hidden" asp-for="CategoryName" class="form-control" />
                <input type="hidden" asp-for="Description" class="form-control" />
                <div class="form-group">
                    <label asp-for="Picture" class="control-label"></label>
                    <input asp-for="Picture" type="file" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
